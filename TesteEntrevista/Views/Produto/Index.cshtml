@model IEnumerable<TesteEntrevista.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar produto</a>
</p>

<section class="row my-5">
    <form asp-action="Index" class="row gy-2 gx-3 align-items-center">
        <div class="col-md-10">
            <input type="text" name="produto" class="form-control col-10" placeholder="Buscar produto" aria-label="Buscar produto" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success w-100">Buscar</button>
        </div>
    </form>
</section>
<table class="table">
    <thead>
        <tr>
            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.idProduto)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.dscProduto)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.vlrUnitario)</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th scope="row" class="text-center">@Html.DisplayFor(modelItem => item.idProduto)</th>
            <td>@Html.DisplayFor(modelItem => item.dscProduto)</td>
            <td>R$ @Html.DisplayFor(modelItem => item.vlrUnitario)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idProduto" class="btn btn-sm btn-primary">Edita</a>
                <a asp-action="Delete" asp-route-id="@item.idProduto" class="btn btn-sm btn-primary">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
