@model TesteEntrevista.Models.Cliente

@{
    ViewData["Title"] = "Editar cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar cliente</h1>

<hr />
<section class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idCliente" />
            <div class="form-group">
                <label asp-for="nmCliente" class="control-label"></label>
                <input asp-for="nmCliente" class="form-control" />
                <span asp-validation-for="nmCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <a asp-action="Index" class="btn btn-danger">Voltar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
