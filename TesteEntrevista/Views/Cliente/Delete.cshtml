@model TesteEntrevista.Models.Cliente

@{
    ViewData["Title"] = "Excluir cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir cliente</h1>

<h3>Você tem certeza que deseja excluir?</h3>
<div>
    <hr />
    <dl class="row my-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nmCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nmCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
