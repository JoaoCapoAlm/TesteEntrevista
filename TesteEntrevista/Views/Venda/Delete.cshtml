@model TesteEntrevista.Models.Venda

@{
    ViewData["Title"] = "Excluir venda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Excluir venda</h1>

<h3>Você tem certeza que deseja excluir?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.idVenda)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.idVenda)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cliente)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cliente.nmCliente)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.dthVenda)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.dthVenda)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Produto)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Produto.dscProduto)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.vlrUnitarioVenda)</dt>
        <dd class="col-sm-10">R$ @Html.DisplayFor(model => model.vlrUnitarioVenda)</dd>
        
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.qtdVenda)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.qtdVenda)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.vlrTotalVenda)</dt>
        <dd class="col-sm-10">R$ @Html.DisplayFor(model => model.vlrTotalVenda)</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idVenda" />
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        <button type="submit" class="btn btn-danger">Excluir</button>
    </form>
</div>
