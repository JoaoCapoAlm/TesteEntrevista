@model IEnumerable<TesteEntrevista.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vendas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar venda</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.idVenda)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Cliente)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.dthVenda)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.vlrTotalVenda)</th>
            <th scope="col">Ação</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th scope="row" class="text-center">@Html.DisplayFor(modelItem => item.idVenda)</th>
            <td>@Html.DisplayFor(modelItem => item.Cliente.nmCliente)</td>
            <td>@Html.DisplayFor(modelItem => item.dthVenda)</td>
            <td>@Html.DisplayFor(modelItem => item.vlrTotalVenda)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idVenda" class="btn btn-sm btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idVenda" class="btn btn-sm btn-primary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idVenda" class="btn btn-sm btn-primary">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
